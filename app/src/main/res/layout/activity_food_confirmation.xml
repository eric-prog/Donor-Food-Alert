<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".FoodConfirmation">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Name:"
            android:textSize="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/foodNameInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/descriptionInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Your Location:"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/chooseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:text="Choose an Image"/>

        <RadioButton
            android:id="@+id/veganRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetarian"
            android:textSize="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"/>

        <RadioButton
            android:id="@+id/meatRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meat"
            android:textSize="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"/>

        <RadioButton
            android:id="@+id/bothRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Both Meat and Vegetables included"
            android:textSize="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_rect"
            android:textColor="@color/colorLightGrey"
            android:text="Confirm"
            android:textSize="30dp" />

    </LinearLayout>
</ScrollView>
